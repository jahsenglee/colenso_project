div.page(ng-controller="AdvancedSearchCtrl")
  h2.title Advanced Search
  div.search_box
    input(type="text", ng-model="searchBox.searchString", ng-change="search()", placeholder="Search...");
  div.search_options
    label Search Options:
    label.option XPATH
      input(type="radio", ng-model="searchBox.searchType", value="XPATH")
    label.option Logical Operators
      input(type="radio", ng-model="searchBox.searchType", value="LOGICAL")
